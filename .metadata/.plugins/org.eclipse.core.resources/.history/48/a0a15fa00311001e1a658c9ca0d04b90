@Service
public class PostInstagramServiceImpl implements PostInstagramService{
	
	@Autowired
	private PostInstagramService instagramService;

	@Override
	public PostInstagram findPostInstagramById(Integer id) throws Exception {
		PostInstagram postInstagram = instagramService.findPostInstagramById(id).orElseThrow(()-> new Exception("Not found Tweet"));
		return postInstagram;
	}

	@Override
	public List<PostInstagram> findPostsInstagram() throws Exception {
		List<PostInstagram> tweets = repository.findAll();
		if(tweets.isEmpty()) {
			throw new Exception("The list of tweet is empty");
		} else {
			return tweets;
		}
	}

