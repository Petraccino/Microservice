package com.sistemi.informativi.controller;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.sistemi.informativi.entity.PostFacebook;
import com.sistemi.informativi.service.PostFacebookService;

@RestController
public class PostFacebookController {
	
	@Autowired
	PostFacebookService facebookService;
	@GetMapping("/instagram-posts/id/{id}")
	public PostFacebook findPostFacebookById(@PathVariable Integer id) throws Exception{
		PostFacebook postInstagram = instagramService.findPostFacebookById(id);
		return postInstagram; 
	}
	@GetMapping("/instagram-posts")
	public List<PostFacebook> findPostFacebook()throws Exception{
		List<PostFacebook>postInstagrams = instagramService.findPostsInstagram();
		return postInstagrams;
	}
	@PostMapping("/instagram-posts")
	public PostFacebook addPostFacebook(@RequestBody PostFacebook postInstagram)throws Exception{
		PostFacebook postInstagramAdd= instagramService.addOrUpdatePostFacebook(postInstagram);
		return postInstagramAdd;
	}
	@PutMapping("/instagram-posts")
	public PostFacebook updatePostFacebook(@RequestBody PostFacebook postInstagram)throws Exception{
		PostFacebook postInstagramUpdate= instagramService.addOrUpdatePostFacebook(postInstagram);
		return postInstagramUpdate;
	}
	@DeleteMapping("/instagram-posts/id/{id}")
	public Map<String, Boolean> deleteById(@PathVariable Integer id) throws Exception{
		Map<String, Boolean> map = instagramService.deleteById(id);
		return map;
	}

}
